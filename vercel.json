{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/api/index.py" }
  ],
  "build": {
    "env": {
      "PIP_PACKAGES": "anthropic>=0.7.0 owlready2>=0.45 python-dotenv>=1.0.0 flask>=2.3.0 flask-cors>=4.0.0 nltk>=3.8.1"
    }
  }
}
